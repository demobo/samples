        <script>
            var curPage = "#control";
            $('#footer li a').click(function(){
                curPage = '#' + $(this).attr('value');
                $('#main').animate({
                    scrollLeft: $(curPage)[0].offsetLeft
                }, 'slow');
            });
            function loadSongInfo(song){
                $('#nowplayingItem').html('<div class="albumImage"><img src="' + song.image + '"></div><div class="albumInfo"><div class="title">' + song.title + '</div><div class="artist">' + song.artist + '</div><div class="album">' + song.album + '</div></div>');
            }
            
            function loadChannelList(items){
                $('#stationItem').html('');
                for (var i = 0; i < items.length; i++) {
                    $('#stationItem').append($('<option value="' + i + '">' + items[i].title + '</option>'));
                }
            }
        </script>
